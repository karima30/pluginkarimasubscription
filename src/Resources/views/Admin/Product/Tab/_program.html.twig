{% form_theme form '@KsanteSubscriptionPlugin/Admin/Form/productsTheme.html.twig' %}
<div class="ui tab" data-tab="program">
    <h3 class="ui top attached header">{{ 'ksante_subscription.ui.program_details'|trans }}</h3>

    <div class="ui attached segment">
        {{ form_errors(form) }}

        <div class="ui one column stackable grid">
            <div class="column">
                <div class="ui segment order">
                    {% if form.program is defined %}
                        {{ form_row(form.program) }}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.4/jquery-ui.js"></script>

<script type="text/javascript">
    jQuery(document).ready(function($) {
        $("#table_sylius_product_program_programCategoriesDetails tbody").sortable({
            stop: function() {
                var rowCount = $('#table_sylius_product_program_programCategoriesDetails tbody tr').length;
                $("#table_sylius_product_program_programCategoriesDetails tbody tr").each(function(){
                    var priorityId = $(this).find('td:nth-child(3) input').attr('id');
                    $('#' + priorityId).val(rowCount);
                    $('#' + priorityId).attr('value', rowCount);
                    --rowCount;
                })
            }
        });

        $("#table_sylius_product_program_programDetails tbody").sortable({
            stop: function() {
                var rowCount = $('#table_sylius_product_program_programDetails tbody tr').length;
                $("#table_sylius_product_program_programDetails tbody tr").each(function(){
                    var priorityId = $(this).find('td:nth-child(3) input').attr('id');
                    $('#' + priorityId).val(rowCount);
                    $('#' + priorityId).attr('value', rowCount);
                    --rowCount;
                })
            }
        });
    });
</script>
